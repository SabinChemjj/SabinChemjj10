#include <stdio.h>

int main() 
{
    double x1, y1, x2, y2, slope;

    printf("Enter the coordinates of the first point (x1, y1): ");
    scanf("%lf %lf", &x1, &y1);

    printf("Enter the coordinates of the second point (x2, y2): ");
    scanf("%lf %lf", &x2, &y2);

    if (x2 - x1 == 0) 
    {
        printf("The slope is undefined (vertical line).\n");
    } 
    else 
    {
        slope = (y2 - y1) / (x2 - x1);
        printf("The slope of the line is: %lf\n", slope);
    }

    return 0;
}
